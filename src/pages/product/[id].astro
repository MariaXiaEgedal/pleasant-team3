  }

  .product-image .main-img {
    width: 100%;
    border: 1px solid black;
  }

  .other-img {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .other-img img {
    width: 80px;
    border: 1px solid black;
  }

  .badges {
    display: flex;
    gap: 0.5rem;
  }

  .badges span {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid black;
    padding: 0.3rem 1rem;
    font-size: 0.75rem;
  }

  .price {
    font-size: larger;
  }

  .benefits {
    margin: 25px 0px;
  }

  .benefits li {
    list-style: none;
    line-height: 3;
    margin-left: -38px;
    font-size: 15px;
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
    vertical-align: middle;
  }

  .size-list {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 0.5rem;
  }

  .size-list li {
    border: 1.5px solid black;
    padding: 8px 20px;
    cursor: pointer;
    text-align: center;
    min-width: 80px;
    transition: background-color 0.2s ease;
  }

  .size-list li:hover {
    box-shadow: inset 0 0 0 2px black;
  }

  .add-to-cart {
    padding: 1rem;
    background-color: #70c6b2;
    border: none;
    font-size: 1rem;
    width: 100%;
    cursor: pointer;
    margin-bottom: 1rem;
    font-family: inherit;
  }

  .add-to-cart:hover {
    background-color: #428172;
  }

  .pickup {
    margin-bottom: 1.5rem;
    line-height: 0.8;
    font-size: 14px;
  }

  .pickup a {
    color: black;
  }

  .donation {
    border: 1px solid black;
    font-size: 12px;
    margin-bottom: 1rem;
    text-align: center;
    padding: 2px;
    line-height: 0.5;
  }

  .big-box {
    border: 1px solid black;
    padding: 0 10px;
  }

  .info-box {
    font-size: 0.8rem;
  }

  .info-box:not(:first-child) {
    border-top: 1px solid black;
  }

  .info-box a {
    color: black;
  }

  details.accordion {
    border-top: 1px solid black;
    border-bottom: 1px solid black;
    padding: 10px 0px;
  }

  details.accordion summary {
    display: flex;
    justify-content: space-between;
    cursor: pointer;
    font-weight: bold;
    font-size: 1.2rem;
  }

